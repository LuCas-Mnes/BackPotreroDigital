<?php
// Ejercicio 1
$n =1;
while  ($n <= 100){
echo "$n\n";
$n++;
}
// Ejercicio 2
for ($i = 100; $i >= 1; $i--)
{
    echo "<h3>$i</h3>";
}

// Ejercicio 3
for ($i = 1; $i <= 100; $i++)
{
    while ($i%2==0){
     echo "<h3>$i</h3>";   
    }
}
// Ejercicio 4
for ($i = 1; $i <= 100; $i++)
{
    while ($i%2!=0){
     echo "<h3>$i</h3>";   
    }
}
// Ejercicio 5
$suma = 0;
for ($i = 1; $i <= 20; $i++)
{
    $suma += $i;
    }
print "<h3>$suma</h3>";

// Ejercicio 6
$suma = 0;
for ($i = 2; $i <= 20; $i+2)
{
    $suma = $i+$suma;
    }
print "<h3>$suma</h3>";


?>
